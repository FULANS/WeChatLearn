.parent {
     margin-left: 2px;
      width: 100%;
      height: 1500rpx;
      background-color: white;
      display: flex;
      flex-flow: row wrap;
      align-content: flex-start;
   
}
.search{
  width: 715rpx;
  height: 65rpx;
  padding: 10rpx 15rpx 12.5rpx 15rpx;
  background: #2A8CE5;
  display: flex;
}

.search-left{
  flex: 8;
  background: #4EA3E7;
  text-align: left;
}
.search-left input{
  display: inline-block;
  height: 65rpx; 
  font-size: 26rpx;
}
.search-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}
.search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.search-right{
  flex: 1;
  /*display: inline-block;  */
  /*background-color: red;*/

}
.search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}



.child {
      box-sizing: border-box;
      background-color: white;
      flex: 0 0 33%;
      height: 260rpx;
      border: 1px solid lightgray;
    }

.wf-image{
     width:120rpx;
     height:120rpx;
     /*background-color: black;*/
     position: relative;
     left: 60rpx;
     top:55rpx;
     
}

.slide-image{
    width:100%;
    height:100%;
}


.wf-bage{
     width:50rpx; 
     height: 50rpx;
     background-color: red;
     position: relative;
     left: 150rpx;
     top:-90rpx;
     border-radius: 50%;
     text-align: center;
     line-height: 50rpx; 
     color:white;   
}

.wf-name{
    width:100%;
    height: 60rpx;
    /*background-color: blue;*/
    position: relative;
    top:20rpx;
    word-wrap: break-word;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
     
    color:gray;
    overflow:hidden;
    text-align: center;
    line-height: 40rpx;
    font-size: 24rpx

}